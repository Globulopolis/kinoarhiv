<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="administrator/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
		<field name="title" type="text" default="" label="COM_KA_MUSIC_ALBUMS_HEADING" class="span12 field_title"
			   required="true" filter="string" size="45"/>
		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC"
			   hint="JFIELD_ALIAS_PLACEHOLDER" class="span12 field_alias" size="45"/>

		<!-- // TODO Left for future file uploads. -->
		<field name="fs_alias" type="text" label="COM_KA_FIELD_MOVIE_FS_ALIAS"
			   description="COM_KA_FIELD_MOVIE_FS_ALIAS_DESC" class="span9 field_fs_alias" size="45"/>
		<field name="fs_alias_orig" type="hidden"/>

		<field name="composer" type="text" default="" label="COM_KA_FIELD_ALBUMS_COMPOSER" class="span12"
			   filter="string" size="45"/>
		<field name="year" type="datetime" default="NOW" label="COM_KA_MUSIC_ALBUMS_FIELD_DATETIME" class="span6"
			   datatype="date" dateformat="yy-mm-dd" data-sel-year="true" data-sel-month="true" filter="user_utc"/>
		<field name="length" type="datetime" default="" label="COM_KA_MUSIC_ALBUMS_FIELD_LENGTH" class="span6"
			   datatype="time" timeformat="HH:mm:ss"/>
		<field name="isrc" type="text" label="COM_KA_FIELD_ALBUMS_FIELD_ISRC_LABEL" class="span9" size="45"/>
		<field name="genres" type="autocomplete" label="COM_KA_FIELD_MOVIE_GENRES"
			   description="COM_KA_FIELD_NAME_GENRES_DESC" class="span10" default="" data-content="genres"
			   data-allow-clear="true" data-key="id" data-remote="true" multiple="true" data-sortable="true"
			   data-lang="*" data-type="1"/>
		<field name="genres_orig" type="hidden"/>

		<field name="buy_urls" type="editor" label="COM_KA_FIELD_ALBUMS_FIELD_BUY_URL_LABEL"
			   description="COM_KA_FIELD_ALBUMS_FIELD_BUY_URL_DESC" filter="KAComponentHelper::cleanHTML" buttons="true"/>
		<field name="desc" type="editor" label="JGLOBAL_DESCRIPTION" filter="KAComponentHelper::cleanHTML" buttons="true"/>
		<field name="rate" type="text" default="" label="COM_KA_FIELD_MOVIE_VOTES" class="span6 field_rate"
			   filter="integer" size="45"/>
		<field name="rate_sum" type="text" default="" label="COM_KA_FIELD_MOVIE_VOTESUMM"
			   class="span6 field_rate_sum" filter="integer" size="45"/>

		<field name="metakey" type="textarea" label="JFIELD_META_KEYWORDS_LABEL"
			   description="JFIELD_META_KEYWORDS_DESC" class="span10" rows="3" cols="30"
			   labelclass="control-label"/>
		<field name="metadesc" type="textarea" label="JFIELD_META_DESCRIPTION_LABEL"
			   description="JFIELD_META_DESCRIPTION_DESC" class="span10" rows="3" cols="30"
			   labelclass="control-label"/>
		<field name="robots" type="list" label="JFIELD_METADATA_ROBOTS_LABEL"
			   description="JFIELD_METADATA_ROBOTS_DESC" labelclass="control-label">
			<option value="">JGLOBAL_USE_GLOBAL</option>
			<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
			<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
			<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
			<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
		</field>
		<field name="tags" type="tag" label="JTAG" description="JTAG_DESC" class="span12" multiple="true"/>
		<field name="publish_up" type="datetime" label="COM_KA_FIELD_PUBLISH_UP_LABEL"
			   description="COM_KA_FIELD_PUBLISH_UP_DESC" class="inputbox" datatype="datetime" size="22"
			   dateformat="yy-mm-dd" timeformat="HH:mm:ss" filter="user_utc"/>
		<field name="publish_down" type="datetime" label="COM_KA_FIELD_PUBLISH_DOWN_LABEL"
			   description="COM_KA_FIELD_PUBLISH_DOWN_DESC" class="inputbox" datatype="datetime" size="22"
			   dateformat="yy-mm-dd" timeformat="HH:mm:ss" filter="user_utc"/>
		<field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			   description="JGLOBAL_FIELD_CREATED_BY_DESC"/>
		<field name="created" type="datetime" label="JGLOBAL_CREATED_DATE" class="inputbox" datatype="datetime"
			   size="22" dateformat="yy-mm-dd" timeformat="HH:mm:ss" filter="user_utc"/>
		<field name="modified" type="datetime" label="JGLOBAL_FIELD_MODIFIED_LABEL" readonly="true"
			   datatype="datetime" size="22" dateformat="yy-mm-dd" timeformat="HH:mm:ss" filter="user_utc"/>
		<field name="modified_by" type="user" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" class="readonly"
			   readonly="true" filter="unset"/>
		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC"
			   class="inputbox" size="6" default="0"/>
		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC"
			   size="1"/>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL">
			<option value="*">JALL</option>
		</field>
		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox"
			   filter="integer" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="rules" type="rules" label="JGLOBAL_ACTION_PERMISSIONS_LABEL" class="inputbox" filter="rules"
			   component="com_kinoarhiv" section="movie" validate="rules"/>

		<field name="covers_path" type="text" label="COM_KA_FIELD_COVER_PATH_LABEL" class="span12" default=""/>
		<field name="covers_path_www" type="text" label="COM_KA_FIELD_COVER_PATH_WWW_LABEL" class="span12" default=""/>
		<field name="cover_filename" type="text" label="COM_KA_FIELD_COVER_FILE_LABEL" class="span12" default=""/>
		<field name="tracks_path" type="text" label="COM_KA_FIELD_TRACKS_PATH_LABEL" class="span12" default=""/>
		<field name="tracks_path_www" type="text" label="COM_KA_FIELD_TRACKS_PATH_WWW_LABEL" class="span12" default=""/>
		<field name="tracks_preview_path" type="text" label="COM_KA_FIELD_TRACKS_PATH_PREVIEW_LABEL" class="span12"
			   default=""/>
	</fieldset>

	<fields name="attribs" label="COM_KA_MOVIES_TAB_PUB">
		<fieldset name="basic" label="COM_KA_MOVIES_TAB_PUB">
			<field name="link_titles" type="list" label="JGLOBAL_LINKED_TITLES_LABEL"
				   description="JGLOBAL_LINKED_TITLES_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="show_tags" type="list" default="1" label="COM_KA_MOVIES_FIELD_SHOW_TAGS_LABEL"
				   description="COM_KA_MOVIES_FIELD_SHOW_TAGS_DESC">
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>
			<field name="show_author" type="list" label="JGLOBAL_SHOW_AUTHOR_LABEL"
				   description="JGLOBAL_SHOW_AUTHOR_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="show_create_date" type="list" label="JGLOBAL_SHOW_CREATE_DATE_LABEL"
				   description="JGLOBAL_SHOW_CREATE_DATE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="show_modify_date" type="list" label="JGLOBAL_SHOW_MODIFY_DATE_LABEL"
				   description="JGLOBAL_SHOW_MODIFY_DATE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="allow_votes" type="list" label="COM_KA_FIELD_SETTINGS_GLOBAL_ALLOW_VOTES_LABEL"
				   description="COM_KA_FIELD_SETTINGS_GLOBAL_ALLOW_VOTES_LABEL_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="allow_reviews" type="list" default="1" label="COM_KA_FIELD_AP_MUSIC_ALLOW_REVIEWS_LABEL">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>

		<fieldset name="tabs" label="COM_KA_MOVIES_TAB_PUB">
			<!-- // TODO Нужно только одно поле -->
			<field name="tab_movie_wallpp" type="list" label="COM_KA_FIELD_AP_TAB_MOVIE_WALLPP_LABEL">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="tab_movie_posters" type="list" label="COM_KA_FIELD_AP_TAB_MOVIE_POSTERS_LABEL">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="tab_movie_awards" type="list" label="COM_KA_FIELD_AP_TAB_MOVIE_AWARDS_LABEL">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
	</fields>
</form>
