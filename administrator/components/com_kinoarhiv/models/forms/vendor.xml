<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit">
		<field name="company_name" type="text" default="" label="COM_KA_VENDORS_FIELD_TITLE" class="span5"
			   filter="string" required="true" size="45"/>
		<field name="company_name_alias" type="text" default="" label="JFIELD_ALIAS_LABEL"
			   description="JFIELD_ALIAS_DESC" class="span5" size="45" labelclass="control-label" filter="string"/>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL">
			<option value="*">JALL</option>
		</field>
		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox"
			   filter="integer" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="description" type="editor" label="JGLOBAL_DESCRIPTION" filter="raw" buttons="false"/>
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
	</fieldset>
</form>
