<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="vendor_id" type="autocomplete" label="COM_KA_FIELD_PREMIERE_VENDOR" filter="integer"
			   class="span12" data-content="vendors" data-allow-clear="true" data-remote="true" data-lang="*"
			   data-minimum-input-length="1" data-key="id" required="true">
			<option value=""></option>
		</field>
		<field name="country_id" type="autocomplete" label="COM_KA_FIELD_COUNTRY_LABEL" filter="integer"
			   class="span12" data-content="countries" data-allow-clear="true" data-remote="true" data-lang="*"
			   data-minimum-input-length="1" data-key="id" required="true">
			<option value=""></option>
		</field>
		<field name="premiere_date" type="datetime" default="NOW" label="COM_KA_FIELD_PREMIERE_DATE_LABEL"
			   class="inputbox validate-datetime" datatype="datetime" size="22" dateformat="yy-mm-dd" timeformat="HH:mm:ss"
			   validate="date" filter="server_utc" required="true"/>
		<field name="info" type="textarea" default="" label="COM_KA_FIELD_PREMIERE_DESC" class="span12" filter="raw"
			   cols="6" rows="5"/>
		<field name="language" type="language" client="site" default="*" label="COM_KA_FIELD_COUNTRY_LANGUAGE_LABEL">
			<option value="*">JALL</option>
		</field>
		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC"
			   class="inputbox" size="6" default="0"/>
		<field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
		<field name="movie_id" type="text" label="COM_KA_FIELD_MOVIE_ID" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
	</fieldset>
</form>
