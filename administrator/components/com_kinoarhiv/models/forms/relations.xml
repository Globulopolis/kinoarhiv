		<field name="id" type="hidden" default="" />
	</fieldset>
	<fieldset name="relations_careers">
		<field name="career_id" type="careers" label="COM_KA_CAREER_FIELD_TITLE" required="true" class="span5" filter="intval" size="11" data-ac-type="careers" />
		<field name="name_id" type="names" label="COM_KA_FIELD_NAME" required="true" class="span5" filter="intval" size="11" data-ac-type="names" />
	</fieldset>
