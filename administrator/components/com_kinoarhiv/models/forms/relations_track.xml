<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic" addrulepath="/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="filename" type="text" default="" label="COM_KA_FIELD_ALBUMS_FIELD_FILENAME" class="span12 filename"
			   required="true" filter="string" size="45"/>
		<field name="title" type="text" default="" label="COM_KA_TRACK_TITLE" class="span12" required="true"
			   filter="string" size="45"/>
		<field name="year" type="datetime" default="NOW" label="COM_KA_MUSIC_ALBUMS_FIELD_DATETIME" class="span6"
			   datatype="date" dateformat="yyyy" data-sel-year="true" filter="string"/>

		<field name="genres" type="autocomplete" label="COM_KA_FIELD_ALBUMS_GENRE"
			   description="COM_KA_FIELD_TRACK_GENRES_DESC" class="span12" data-content="genres" data-allow-clear="true"
			   data-remote="false" multiple="true" data-sortable="true" data-type="1" data-max-selection="5"
			   data-lang="*" data-placeholder="JGLOBAL_SELECT_AN_OPTION">
			<option value=""></option>
		</field>
		<field name="genres_orig" type="hidden"/>

		<field name="label" type="autocomplete" label="COM_KA_MUSIC_VENDOR" class="span12" data-content="vendors"
			   data-allow-clear="true" data-remote="true" multiple="true" data-max-selection="3" data-key="id"
			   data-lang="*" data-placeholder="JGLOBAL_SELECT_AN_OPTION"/>

		<field name="publisher" type="autocomplete" label="COM_KA_MUSIC_PUBLISHER" class="span12" default=""
			   data-content="vendors" data-allow-clear="true" data-key="id" data-remote="true"
			   data-minimum-input-length="1" data-lang="*"/>
		<field name="isrc" type="text" default="" label="COM_KA_FIELD_ALBUMS_FIELD_ISRC_LABEL" class="span6"
			   filter="string" size="45"/>
		<field name="buy_url" type="textarea" default="" label="COM_KA_FIELD_ALBUMS_FIELD_BUY_URL_LABEL"
			   description="COM_KA_FIELD_ALBUMS_FIELD_BUY_URL_DESC" class="span12" spellcheck="false"
			   filter="KAComponentHelper::cleanHTML" cols="45" rows="5"/>
		<field name="tracks_path" type="hidden" class="readonly" label="COM_KA_FIELD_TRACKS_PATH_LABEL"
			   size="45" default="" readonly="true"/>
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
	</fieldset>

	<fieldset name="additional" label="COM_KA_MOVIES_TAB_PUB" addrulepath="/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="is_playlist" type="radio" label="COM_KA_MUSIC_TRACK_IS_PLAYLIST"
			   description="COM_KA_MUSIC_TRACK_IS_PLAYLIST_DESC" class="btn-group" filter="intval" size="1" default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="track_number" type="text" default="" label="COM_KA_MUSIC_TRACKS_NUMBER" class="span3"
			   filter="string" size="45"/>
		<field name="cd_number" type="text" default="" label="COM_KA_MUSIC_TRACKS_CD_NUMBER" class="span3"
			   filter="string" size="45"/>
		<field name="length" type="text" default="" label="COM_KA_MUSIC_ALBUMS_FIELD_LENGTH" class="span3"
			   filter="string" size="45"/>
		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			   filter="intval" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" size="1"/>
		<field name="comments" type="textarea" default="" label="COM_KA_FIELD_TRACK_COMMENTS" class="span12"
			   filter="KAComponentHelper::cleanHTML" cols="45" rows="5"/>
	</fieldset>
</form>
