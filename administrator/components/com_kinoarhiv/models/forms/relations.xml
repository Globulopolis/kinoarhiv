<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="relations_countries">
		<field name="country_id" type="countries" label="COM_KA_FIELD_COUNTRY_LABEL" required="true" class="span5" filter="intval" size="11" data-ac-type="countries" />
		<field name="movie_id" type="movies" label="COM_KA_FIELD_MOVIE_LABEL" required="true" class="span5" filter="intval" size="11" data-ac-type="movies" />
		<field name="ordering" type="order" data="countries" class="inputbox span5" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />
	</fieldset>
	<fieldset name="relations_genres">
		<field name="genre_id" type="genres" label="COM_KA_FIELD_GENRE_LABEL" required="true" class="span5" filter="intval" size="11" data-ac-type="genres" />
		<field name="movie_id" type="movies" label="COM_KA_FIELD_MOVIE_LABEL" required="true" class="span5" filter="intval" size="11" data-ac-type="movies" />
		<field name="ordering" type="order" data="genres" class="inputbox span5" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />
	</fieldset>
	<fieldset name="relations_awards">
		<field name="award_id" type="awards" label="COM_KA_FIELD_AW_LABEL" required="true" class="span12" filter="intval" size="11" data-ac-type="awards" />
