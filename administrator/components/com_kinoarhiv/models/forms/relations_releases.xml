<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="vendor_id" type="autocomplete" label="COM_KA_FIELD_RELEASE_VENDOR" filter="integer"
			   class="span12" data-content="vendors" data-allow-clear="true" data-remote="true" data-lang="*"
			   data-minimum-input-length="1" data-key="id" required="true">
			<option value=""></option>
		</field>
		<field name="country_id" type="autocomplete" label="COM_KA_FIELD_COUNTRY_LABEL" filter="integer"
			   class="span12" data-content="countries" data-allow-clear="true" data-remote="true" data-lang="*"
			   data-minimum-input-length="1" data-key="id" required="true">
			<option value=""></option>
		</field>
		<field name="release_date" type="datetime" default="NOW" label="COM_KA_FIELD_RELEASE_DATE_LABEL"
			   class="inputbox validate-date" datatype="date" size="22" dateformat="yy-mm-dd" validate="date"
			   required="true" data-sel-year="true" data-sel-month="true"/>
		<field name="media_type" type="autocomplete" label="COM_KA_RELEASES_MEDIATYPE_TITLE" data-lang="*"
			   description="COM_KA_FIELD_RELEASES_MEDIATYPE_DESC" filter="integer" class="span12"
			   data-content="mediatypes" data-allow-clear="true" data-key="id">
			<option value=""></option>
		</field>
		<field name="desc" type="textarea" default="" label="JGLOBAL_DESCRIPTION"
			   description="COM_KA_FIELD_RELEASE_DESC_LABEL_DESC" class="span12" filter="KAComponentHelper::cleanHTML"
			   cols="6" rows="5"/>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL">
			<option value="*">JALL</option>
		</field>
		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC"
			   class="inputbox" size="6" default="0"/>
		<field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
		<field name="item_id" type="text" label="COM_KA_FIELD_MOVIE_ID" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
		<field name="item_type" type="radio" default="0" label="COM_KA_FIELD_TYPE_LABEL" filter="integer"
			   class="btn-group" size="1" readonly="true">
			<option value="0">COM_KA_TABLES_RELATIONS_AWARDS_TYPE_0</option>
			<option value="1">COM_KA_MUSIC_ALBUM_TITLE</option>
		</field>
	</fieldset>
</form>
