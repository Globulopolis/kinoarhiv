<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="title" type="text" default="" label="COM_KA_TRACK_TITLE" class="span12" required="true"
			   filter="string" size="45"/>
		<field name="artist_id" type="autocomplete" label="COM_KA_MOVIES_NAMES_LAYOUT_ADD_FIELD_NAME" filter="integer"
			   class="span12" data-content="names" data-allow-clear="true" data-remote="true"
			   data-minimum-input-length="1" data-key="id" data-sel-size="1" data-lang="*">
			<option value=""></option>
		</field>
		<field name="year" type="datetime" default="NOW" label="COM_KA_MUSIC_ALBUMS_FIELD_DATETIME" class="span6"
			   datatype="date" dateformat="yy" data-sel-year="true" filter="user_utc"/>
		<field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
	</fieldset>
</form>
