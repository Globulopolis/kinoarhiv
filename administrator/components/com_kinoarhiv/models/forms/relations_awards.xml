<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="administrator/components/com_kinoarhiv/models/rules"
			  addfieldpath="/components/com_kinoarhiv/models/fields">
		<field name="award_id" type="autocomplete" label="COM_KA_MOVIES_AWARDS_LAYOUT_ADD_FIELD_TITLE"
			   filter="integer"
			   required="true" class="span12" data-content="awards" data-allow-clear="true" data-remote="true"
			   data-lang="*" data-key="id">
			<option value=""></option>
		</field>
		<field name="year" type="datetime" label="COM_KA_FIELD_AW_YEAR" size="22" default="" class="validate-year"
			   dateformat="yy" datatype="date" required="true" validate="year"/>
		<field name="desc" type="textarea" label="COM_KA_FIELD_AW_DESC" class="span12" default="" cols="6"
			   rows="5" filter="JComponentHelper::filterText"/>
		<field name="type" type="radio" default="0" label="COM_KA_TABLES_RELATIONS_AWARDS_TYPE" filter="integer"
			   class="btn-group">
			<option value="0">COM_KA_TABLES_RELATIONS_AWARDS_TYPE_0</option>
			<option value="1">COM_KA_TABLES_RELATIONS_AWARDS_TYPE_1</option>
		</field>
		<field name="item_id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
		<field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10"
			   default="0" readonly="true"/>
	</fieldset>
</form>
