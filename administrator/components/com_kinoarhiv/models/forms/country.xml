<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit">
		<field name="name" type="text" default="" label="COM_KA_FIELD_COUNTRY_LABEL" class="span12" required="true" filter="string" size="6" />
		<field name="code" type="text" default="" label="COM_KA_FIELD_COUNTRY_CODE_LABEL" class="span3" description="COM_KA_FIELD_COUNTRY_CODE_LABEL_DESC" required="true" filter="word" size="6" />
		<field name="language" type="language" client="site" default="*" label="COM_KA_FIELD_COUNTRY_LANGUAGE_LABEL">
			<option value="*">JALL</option>
		</field>
		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" filter="intval" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
	</fieldset>
</form>
